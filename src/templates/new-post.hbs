<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
    </head>
    <body onload="onLoadInit();">
        <div>
            <h1 id="new-post-heading"></h1>
        </div>
        <div>
            <div>
                <label for="title-input">Post Title</label>
                <input id="title-input" type="text" />
                <button onclick="onClickSubmitNewPost();">Publish</button>
            </div>
            <div>
                <label for="body-input">Post Body</label>
                <span id="new-post-error"></span>
                <textarea id="body-input"></textarea>
            </div>
        </div>

        <script
            type="text/x-handlebars-template"
            id="title-inner-template"
        >
            New Post for {{name}}
        </script>

        <script
            type="text/x-handlebars-template"
            id="new-post-heading-inner-template"
        >
            New Post for {{name}}
        </script>

        <script src="./dist/js/new-post.bundle.js" charset="utf-8"></script>
    </body>
</html>
